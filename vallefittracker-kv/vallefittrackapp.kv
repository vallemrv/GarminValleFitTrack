#:import . components.pagenavigations
#:import hex_to_icon components.resources.hex_to_icon
#:import get_color_from_hex kivy.utils.get_color_from_hex
<LabelInfo@Label>:
    color: 0,0,0,1
    font_size: "20dp"
    size_hint_y: None
    text_size: self.width, None
    height: self.texture_size[1]
    valign: "middle"
    halign: "center"

<ActividadWdiget>:
    anchor_x: "center"
    anchor_y: "center"
    size_hint: 1, 1

    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        size_hint: .95, .9
        canvas.before:
            Color:
                rgb: 0,0,0,1
            RoundedRectangle:
                size: self.width + dp(5), self.height + dp(5)
                pos: self.x - dp(2.5), self.y - dp(2.5)
                radius: [50,]
            Color:
                rgb: root.bg_color
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [50,]
        BoxLayout:
            orientation: "vertical"
            size_hint: .9, .8
            BoxLayout:
                LabelInfo:
                    id: __nombre
                    text: 'Nombre: '+ root.nombre
                LabelInfo:
                    id: __tiempo
                    text: 'Duracion: '+ root.tiempo
            BoxLayout:
                LabelInfo:
                    id: __vueltas
                    text: 'Set: '+ root.vueltas
                LabelInfo:
                    id: __max_hr
                    text: 'HR. max: '+ root.max_hr
                LabelInfo:
                    id: __avg_hr
                    text: 'HR. medio: '+ root.avg_hr
        FloatButton:
            position: "top"
            icon: res.FA_EYE
            button_size: "40dp"


<ValleFitTrackPage>:
    spin: __spin
    info: __info
    content_activities: __content_activities
    content_statistics: __content_statistics

    Page:
        id_page: "listado"
        title: "Lista de actividades"
        MenuListView:
            row_height: "60dp"
            spacing: 0
            id: __content_activities

        Spin:
            id: __spin
        FloatLabel:
            id: __info
            position: "top"
            bg_color: "#3498DB"
        FloatButtonsGroup:
            orientation: 'horizontal'
            FloatButton:
                icon: res.FA_REFRESH
                on_release: root.refresh()
            FloatButton:
                icon: hex_to_icon(0xf019)
                on_release: root.get_activities()


    Page:
        title: "Actividad"
        id_page: "actividad"
        MenuListView:
            id: __content_statistics
